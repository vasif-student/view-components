                            <div class="swiper-slide imgLoad">
                                <!-- gallery item -->
                                <div class="hotel-image-frame">
                                    <a data-fancybox="gallery"
                                       href="~/img/@item.ImageName">
                                        <img class="lozad" src="~/img/@item.ImageName" alt="about" />
                                        <div class="hotel-badge">@item.Badge</div>
                                        <span class="hotel-zoom">
                                            <i class="fas fa-search-plus"></i>
                                        </span>
                                    </a>
                                </div>
                                <!-- gallery item end -->
                            </div>

                        }

