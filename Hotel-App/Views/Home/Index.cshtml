<!-- gallery -->
<section class="hotel-transition-top hotel-p-0-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="
									hotel-center
									hotel-title-frame
									hotel-scroll-animation
									hotel-mb-100
								">
                    <h2 class="hotel-mb-20">Sizi gözləyirik!</h2>
                    <p class="hotel-mb-30">
                        Lorem ipsum dolor sit amet consectetur adipisicing
                        elit. Libero esse vero, a illum iure quidem porro,
                        molestiae asperiores, explicabo repellendus fugit
                        corrupti sint soluta sed quod rerum laudantium
                        expedita quo..
                    </p>
                </div>
            </div>
            <div class="col-lg-12">
                <!-- slider -->
                <div class="swiper-container hotel-about-slider hotel-scroll-animation">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.Swipers)
