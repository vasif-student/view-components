<!-- rooms -->
<section class="hotel-transition-bottom" style="background-color: #fff">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="hotel-center hotel-title-frame hotel-scroll-animation hotel-mb-100">
                    <h2 class="hotel-mb-20">Ən Yaxşı Otaqlarımız</h2>
                    <p class="hotel-mb-30">
                        Lorem ipsum dolor sit amet consectetur adipisicing
                        elit. Natus, quam, soluta facere, dolores est ab
                        dolore praesentium nisi eaque enim voluptates quaerat
                        atque numquam consectetur minima. A perferendis in
                        eligendi.
                    </p>
                    <a href="rooms-1.html" class="hotel-btn hotel-btn-md">Bütün Otaqlar</a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="swiper-container hotel-uni-slider">
                    <div class="swiper-wrapper">
                        @foreach (var room in Model.Rooms)
                        {
                            <div class="swiper-slide">
                                <!-- room card -->
                                <div class="hotel-room-card hotel-scroll-animation">
                                    <div class="hotel-cover-frame imgLoad">
                                        <a href="room.html">
                                            <img class="lozad" src="~/img/@room.Image" alt="cover" />
                                        </a>
                                        <div class="hotel-badge">@room.Badge</div>
                                    </div>
                                    <div class="hotel-description-frame">
                                        <div class="hotel-room-features">
                                            <div class="hotel-feature imgLoad">
                                                <div class="hotel-icon-frame">
                                                    <img class="lozad" src="~/img/icons/@room.BedIcon" alt="icon" />
                                                </div>
                                                <span>@room.NumberOfPeople</span>
                                            </div>
                                            <div class="hotel-feature imgLoad">
                                                <div class="hotel-icon-frame">
                                                    <img class="lozad" src="~/img/icons/@room.SquareIcon" alt="icon" />
                                                </div>
                                                <span>@room.Square</span>
                                            </div>
                                        </div>
                                        <a href="room.html">
                                            <h3 class="hotel-mb-20">@room.RoomType</h3>
                                        </a>
                                        <div class="hotel-text-light hotel-text-sm hotel-mb-20">
                                            @room.Description
                                        </div>
                                        <div class="hotel-card-bottom imgLoad">
                                            <div class="hotel-price">
                                                @room.Price <span> @room.PerNight</span>
                                            </div>
                                            <a href="room.html" class="hotel-btn">
                                                <img class="lozad" src="~/img/icons/@room.BookmarkIcon" alt="icon" />@room.Reservation
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!-- room card end -->
                            </div>
                        }

                    </div>

                    <!-- slider navigation -->
                    <div class="hotel-uni-slider-nav-panel">
                        <div class="hotel-uni-slider-pagination"></div>
                        <div class="hotel-uni-nav">
                            <div class="hotel-uni-slider-prev">
                                <i class="fas fa-arrow-left"></i>
                            </div>
                            <div class="hotel-uni-slider-next">
                                <i class="fas fa-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                    <!-- slider navigation end -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- rooms end -->
